{
  "name": "email-kategorisierung",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "db:generate": "cd prisma && npx prisma generate",
    "db:push": "cd prisma && npx prisma db push",
    "db:migrate": "cd prisma && npx prisma migrate dev",
    "db:migrate:prod": "cd prisma && npx prisma migrate deploy",
    "db:studio": "cd prisma && npx prisma studio",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.0",
  "dependencies": {
    "@prisma/client": "^7.3.0"
  }
}
