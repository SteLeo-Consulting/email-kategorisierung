# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# Get these from https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/emailcat?sslmode=require"
# Direct connection for migrations (without connection pooling)
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/emailcat?sslmode=require"

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# MUST be exactly 64 hex characters (32 bytes)
ENCRYPTION_KEY="your-64-character-hex-string-here-generate-with-command-above"

# =============================================================================
# GOOGLE OAUTH (Gmail)
# =============================================================================
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# =============================================================================
# MICROSOFT OAUTH (Outlook/Microsoft 365)
# =============================================================================
# Get from https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps
MICROSOFT_CLIENT_ID="your-azure-app-client-id"
MICROSOFT_CLIENT_SECRET="your-azure-client-secret"

# =============================================================================
# NEXTAUTH
# =============================================================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-here"
# Your production URL (without trailing slash)
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# VERCEL CRON
# =============================================================================
# Generate with: openssl rand -hex 16
CRON_SECRET="your-cron-secret-here"

# =============================================================================
# LLM (Optional - for AI classification)
# =============================================================================
# Provider: "openai" or "anthropic" or "none"
LLM_PROVIDER="none"
# Only needed if LLM_PROVIDER is not "none"
LLM_API_KEY=""
# Model to use (optional, defaults shown)
# OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229
LLM_MODEL=""

# =============================================================================
# APP CONFIG
# =============================================================================
# How often to poll for new emails (in minutes)
POLL_INTERVAL_MINUTES="5"
# Maximum emails to process per run (rate limiting)
MAX_EMAILS_PER_RUN="50"
# Enable debug logging
DEBUG="false"
